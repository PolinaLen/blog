<h1>All articles<h1>
    <h4><%=link_to "NEW", new_article_path %><h4>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>last changed</th>
            <th>Action</th>
            <th>Изменить</th>
            <th>Удалить</th>
        </tr>
   
    <% @articles.each do |article| %>
        <tr>  
            <td> <%= article.id %> </td>
           <td> <%= article.title %></td>
           <td> <%= article.description %></td>
           <td> <%= article.updated_at.strftime("%H:%M , %d-%m-%y") %></td>
            <td> <%= link_to "Look more", article_path(article)%></td>
            <td> <%= link_to "Edit", edit_article_path(article)%> </td>
            <td> <%= link_to "делете", article_path(article), method: :delete, data: {confirm: "А может нинада?" }%> </td>
        </tr>   
    <% end %>
    </table>