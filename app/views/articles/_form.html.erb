
<% if @article.errors.any? %>
      <ul>
          <% @article.errors.full_messages.each do |msg| %>  
            <li><%= msg  %></li>
          <% end %>
      </ul
      >    
    <% end %>
<%= form_for @article do |f| %>
    <p class="center">
      <%= f.label :title %>
      
      <%= f.text_field :title, :class => 'answer' %>
    </p>
    <p class="center">
      <%= f.label :description %>
      <%= f.text_area :description, :class => 'answer-description' %>
      <br>
       <%=  f.submit "CREATE" , :class => "inverse-btn"%> 
    </p>
<%end%>